{
    "compilerOptions": {
      "target": "es2016",
      "module": "node16",
      "moduleResolution": "node16",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true, 
      "emitDecoratorMetadata": true // If you are using decorators with metadata
    },
    "display": "Recommended",
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": ["src/**/*.ts", "src/types/**/*.d.ts", "src/types/express/express.d.ts"]
  }